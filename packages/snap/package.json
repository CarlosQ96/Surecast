{
  "name": "surecast-snap",
  "version": "0.1.0",
  "description": "Surecast - DeFi insurance snap for MetaMask",
  "license": "(MIT-0 OR Apache-2.0)",
  "main": "./dist/bundle.js",
  "files": [
    "dist/",
    "images/",
    "snap.manifest.json"
  ],
  "scripts": {
    "build": "mm-snap build",
    "build:clean": "pnpm clean && pnpm build",
    "clean": "rimraf dist",
    "lint": "pnpm lint:eslint && pnpm lint:misc --check",
    "lint:eslint": "eslint . --cache --ext js,ts",
    "lint:fix": "pnpm lint:eslint --fix && pnpm lint:misc --write",
    "lint:misc": "prettier '**/*.json' '**/*.md' '**/*.yml' --ignore-path ../../.gitignore --no-error-on-unmatched-pattern",
    "prepublishOnly": "mm-snap manifest",
    "serve": "mm-snap serve",
    "start": "mm-snap watch",
    "test": "jest"
  },
  "dependencies": {
    "@metamask/snaps-sdk": "~10.3.0",
    "@metamask/utils": "^11.9.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@metamask/snaps-cli": "^8.3.0",
    "@metamask/snaps-jest": "^9.8.0",
    "@types/jest": "^27.5.2",
    "@types/react": "18.2.4",
    "@types/react-dom": "18.2.4",
    "eslint": "^9.11.0",
    "jest": "^29.5.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.1.0",
    "typescript": "~5.7.3"
  },
  "engines": {
    "node": ">=18.6.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
